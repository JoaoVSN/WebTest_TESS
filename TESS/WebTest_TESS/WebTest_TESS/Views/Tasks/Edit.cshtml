@model WebTest_TESS.Models.Tasks
@{
    ViewData["Title"] = "Edit";
}

<h1 class="alert aletr-info"> Edit TODO </h1>

<div class="container border p-3">
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="@Model.pk_Task">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-3">
                <label>Description</label>
            </div>
            <div class="col-6">
                <input asp-for="@Model.name_Task" class="form-control">
            </div>
            <span asp-validation-for="@Model.name_Task" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label>Date</label>
            </div>
            <div class="col-6">
                <input asp-for="@Model.date_Task" class="form-control">
            </div>
            <span asp-validation-for="@Model.date_Task" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label>Complete</label>
            </div>
            <div class="col-6">
                <input asp-for="@Model.complete_Task" class="form-control">
            </div>
            <span asp-validation-for="@Model.complete_Task" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Submit" class="form-control btn btn-success">
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-primary form-control"> Back</a>
            </div>
        </div>
    </form>
</div>