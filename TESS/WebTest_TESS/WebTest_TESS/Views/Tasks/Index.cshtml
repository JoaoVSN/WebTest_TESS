@model IEnumerable<WebTest_TESS.Models.Tasks>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row alert alert-info">

        <div class="col-6 sm">
            <a asp-action="Create" asp-controller="Tasks" class="btn btn-primary btn-success">Create</a>
        </div>
    </div>
</div>


<table class="table table-striped table-bordered">
    <tr>
        <th>Description</th>
        <th>Date</th>
        <th>Complete</th>
        <th></th>
    </tr>
    @foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(tk => item.name_Task)</td>
            <td>@Html.DisplayFor(tk => item.date_Task)</td>
            <td>@Html.DisplayFor(tk => item.complete_Task)</td>
            <td>
                <a asp-route-id="@item.pk_Task" asp-action="Edit" asp-controller="Tasks" class="btn btn-primary btn-sm">Edit</a>
                <a asp-route-id="@item.pk_Task" asp-action="Delete" asp-controller="Tasks" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>

    }
</table>